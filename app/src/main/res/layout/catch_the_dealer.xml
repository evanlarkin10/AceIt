<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/catch_the_dealer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/catch_the_dealer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/higher_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="10dp"
        android:text="Higher"
        app:layout_constraintBottom_toTopOf="@+id/lower_button"
        app:layout_constraintEnd_toStartOf="@+id/drawCard" />

    <Button
        android:id="@+id/lower_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="Lower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/drawCard" />

    <ImageView
        android:id="@+id/drawCard"
        android:layout_width="76dp"
        android:layout_height="87dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/eventText"
        android:layout_width="435dp"
        android:layout_height="43dp"
        android:layout_marginStart="15dp"
        android:text="Event"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catch_the_dealer_title" />

    <TextView
        android:id="@+id/drawText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="5dp"
        android:text="Draw"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/drawCard"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/ctd_table_layout"
        android:layout_width="404dp"
        android:layout_height="520dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="80dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <TableRow
            android:layout_width="15dp"
            android:layout_height="15dp">

            <ImageView
                android:id="@+id/cardImgAD"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="0"
                app:srcCompat="@drawable/ad" />

            <ImageView
                android:id="@+id/cardImg2D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="1"
                app:srcCompat="@drawable/d2" />

            <ImageView
                android:id="@+id/cardImg3D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="2"
                app:srcCompat="@drawable/d3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/aceCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twoCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/threeCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImg4D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="0"
                app:srcCompat="@drawable/d4" />

            <ImageView
                android:id="@+id/cardImg5D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="1"
                app:srcCompat="@drawable/d5" />

            <ImageView
                android:id="@+id/cardImg6D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="2"
                app:srcCompat="@drawable/d6" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fourCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fiveCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sixCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImg7D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="0"
                app:srcCompat="@drawable/d7" />

            <ImageView
                android:id="@+id/cardImg8D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="1"
                app:srcCompat="@drawable/d8" />

            <ImageView
                android:id="@+id/cardImg9D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="2"
                app:srcCompat="@drawable/d9" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sevenCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eightCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nineCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImg10D"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="0"
                app:srcCompat="@drawable/d10" />

            <ImageView
                android:id="@+id/cardImgJD"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="1"
                app:srcCompat="@drawable/dj" />

            <ImageView
                android:id="@+id/cardImgQD"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="2"
                app:srcCompat="@drawable/dq" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tenCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jackCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/queenCount"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImgKD"
                android:layout_width="44dp"
                android:layout_height="69dp"
                android:layout_column="1"
                app:srcCompat="@drawable/dk" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kingCount"
                android:layout_column="1"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/dealerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:text="Dealer:"
        app:layout_constraintBottom_toTopOf="@+id/turnText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/turnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:text="Turn:"
        app:layout_constraintBottom_toTopOf="@+id/streakText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/streakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:text="Streak:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>